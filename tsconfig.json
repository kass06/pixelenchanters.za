{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "strictNullChecks": false
  }
}
{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",  // Vercel Node.js needs CommonJS
    "outDir": "dist",      // Must match Vercelâ€™s "Output Directory"
    "rootDir": "src",      // Source folder
    "strict": true
  },
  "include": ["src"]       // Ensure TS files are included
}
